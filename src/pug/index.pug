            // Interests
            include pages/interests
            hr.m-0



        // Font Awesome icons (free version) - deferred
        script(src='https://use.fontawesome.com/releases/v6.3.0/js/all.js', defer, crossorigin='anonymous')

        // Bootstrap core JS - deferred for non-critical functionality
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js', defer)

        // Core theme JS - deferred for better performance
        script(src='js/scripts.js', defer)
