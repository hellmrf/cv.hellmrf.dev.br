doctype html
html(lang='pt')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='Heliton Martins')

        title Heliton Martins - CV

        // Preload critical resources
        link(rel='preload', href='css/styles.css', as='style')

        // Preload critical fonts with crossorigin
        link(rel='preload', href='https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700', as='style', crossorigin)

        // Core theme CSS (includes Bootstrap) - critical path
        link(href='css/styles.css', rel='stylesheet')

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/img/favicon.ico')

        // Google fonts - load efficiently
        link(href='https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700&display=swap', rel='stylesheet')
        link(href='https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i&display=swap', rel='stylesheet')

        // Non-critical CSS loaded asynchronously
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/gh/jpswalsh/academicons@1/css/academicons.min.css', media='print', onload="this.media='all'")

    body#page-top

        include includes/nav
        // Page Content
        .container-fluid.p-0

